<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Dire que l'app peut fonctionner sans téléphonie -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Permission d'envoi de SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Pour Android 10+ : -->
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS"
        tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <!-- Foreground service types pour Android 13+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Permissions réseau -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Permissions système (optionnelles, nécessaires pour certaines fonctionnalités) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />



    <!-- Déclaration pour les requêtes de numéros de téléphone (Android 11+) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="smsto" />
        </intent>

        <!-- Si vous utilisez des providers téléphoniques -->
        <provider android:authorities="com.android.phone" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmsTask"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <service
            android:name=".composants.autosend.AutoSmsService"
            android:foregroundServiceType="dataSync"
            android:exported="false" />


        <!-- Déclaration explicite de l'utilisation des SMS -->
        <meta-data
            android:name="android.app.uses_sms"
            android:value="true" />

        <!-- Pour expliquer l'usage des permissions -->
        <meta-data
            android:name="android.app.permission.SEND_SMS"
            android:value="Cette permission est nécessaire pour envoyer des SMS programmatiquement vers le serveur configuré." />




        <receiver
            android:name=".composants.autosend.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name=".viewmodel.HybridSentReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="SMS_HYBRID_SENT"/>
            </intent-filter>
        </receiver>


        <receiver
            android:name=".viewmodel.DeliveredReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="SMS_DELIVERED_ACTION" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".FlowActivity"
            android:exported="true"
            android:label="@string/title_activity_flow"
            android:theme="@style/Theme.SmsTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.SmsTask" />

    </application>

</manifest>